generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "darwin-arm64", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Ingredient {
  id                Int                @id @default(autoincrement())
  name              String
  unit              String // e.g., "g", "ml", "piece"
  costPerUnit       Float
  currentStock      Float
  wastePercentage   Float // e.g., 0.1 for 10%
  recipeIngredients RecipeIngredient[]
  variantIngredients VariantIngredient[]
  extraIngredients   ExtraIngredient[]
  inventoryLogs     InventoryLog[]
  isDeleted         Boolean            @default(false)
}

model Category {
  id          Int       @id @default(autoincrement())
  name        String    @unique
  products    Product[]
  extras      Extra[]
}

model Product {
  id          Int          @id @default(autoincrement())
  name        String
  category    Category?    @relation(fields: [categoryId], references: [id])
  categoryId  Int?
  categoryName String?     // Keeping for backward compatibility or easy access if needed, but relation is better
  basePrice   Float        @default(0.0) // Base selling price
  description String?      // Product description
  isActive    Boolean      @default(true) // Whether product is available for ordering
  recipes     Recipe[]
  sales       Sale[]
  orders      OrderProduct[]
  variantGroups VariantGroup[]
}

model VariantGroup {
  id        Int             @id @default(autoincrement())
  name      String          // e.g. "Milk Type", "Temperature"
  product   Product         @relation(fields: [productId], references: [id])
  productId Int
  options   VariantOption[]
}

model VariantOption {
  id              Int                 @id @default(autoincrement())
  name            String              // e.g. "Oat", "Hot"
  priceAdjustment Float               @default(0.0)
  variantGroup    VariantGroup        @relation(fields: [variantGroupId], references: [id])
  variantGroupId  Int
  ingredients     VariantIngredient[]
  orderProducts   OrderProductVariant[]
}

model VariantIngredient {
  id              Int           @id @default(autoincrement())
  variantOption   VariantOption @relation(fields: [variantOptionId], references: [id])
  variantOptionId Int
  ingredient      Ingredient    @relation(fields: [ingredientId], references: [id])
  ingredientId    Int
  quantity        Float
}

model Extra {
  id          Int               @id @default(autoincrement())
  name        String            // e.g. "Caramel Syrup", "Extra Shot"
  price       Float             @default(0.0)
  category    Category?         @relation(fields: [categoryId], references: [id]) // Optional: if extra is specific to a category
  categoryId  Int?
  ingredients ExtraIngredient[]
  orderProducts OrderProductExtra[]
}

model ExtraIngredient {
  id           Int        @id @default(autoincrement())
  extra        Extra      @relation(fields: [extraId], references: [id])
  extraId      Int
  ingredient   Ingredient @relation(fields: [ingredientId], references: [id])
  ingredientId Int
  quantity     Float
}

model Recipe {
  id         Int                 @id @default(autoincrement())
  product    Product             @relation(fields: [productId], references: [id])
  productId  Int
  variant    String              // e.g., "Standard", "Large" - keeping this as the "Base Variant" or "Size"
  priceModifier Float            @default(0.0) // Additional price for this variant
  isActive   Boolean             @default(true) // Whether this variant is available
  ingredients RecipeIngredient[]
  orderProducts OrderProduct[]
}

model RecipeIngredient {
  id           Int         @id @default(autoincrement())
  recipe       Recipe      @relation(fields: [recipeId], references: [id])
  recipeId     Int
  ingredient   Ingredient  @relation(fields: [ingredientId], references: [id])
  ingredientId Int
  quantity     Float       // how much of the ingredient is used in the recipe
}

model Sale {
  id             Int       @id @default(autoincrement())
  product        Product   @relation(fields: [productId], references: [id])
  productId      Int
  quantity       Int
  date           DateTime  @default(now())
  packagingType  String
  variant        String
  salePrice      Float
  user           User      @relation(fields: [userId], references: [id])
  userId         Int
}

model InventoryLog {
  id            Int         @id @default(autoincrement())
  ingredient    Ingredient  @relation(fields: [ingredientId], references: [id])
  ingredientId  Int
  change        Float
  reason        String
  timestamp     DateTime    @default(now())
  user          User        @relation(fields: [userId], references: [id])
  userId        Int
}

model Packaging {
  id            Int            @id @default(autoincrement())
  type          String         @unique
  costPerUnit   Float
  currentStock  Float
  orderProducts OrderProduct[]
  isDeleted     Boolean        @default(false)
}

model User {
  id         Int       @id @default(autoincrement())
  name       String
  email      String    @unique
  password   String    // store hashed passwords only!
  role       UserRole  @default(BARISTA)
  sales      Sale[]    // user who performed the sale
  inventoryLogs InventoryLog[] // user who updated inventory
  orders     Order[]   // user who created the order
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}

enum UserRole {
  ADMIN
  MANAGER
  BARISTA
  CASHIER
}

enum OrderStatus {
  PENDING
  CONFIRMED
  PREPARING
  READY
  COMPLETED
  CANCELLED
}

enum PaymentMethod {
  CASH
  CARD
  MOBILE_PAYMENT
  OTHER
}

enum PaymentStatus {
  PENDING
  PAID
  PARTIAL
  REFUNDED
  CANCELLED
}

enum OrderPriority {
  URGENT
  HIGH
  NORMAL
  LOW
}

model Client {
  id                Int     @id @default(autoincrement())
  client_number     String  @unique
  name              String  @default("")
  address           String  @default("")
  application_used  String
  orders            Order[]
}

model Order {
  id                      Int            @id @default(autoincrement())
  client                  Client         @relation(fields: [clientId], references: [id])
  clientId                Int
  user                    User           @relation(fields: [userId], references: [id])
  userId                  Int
  createdAt               DateTime       @default(now())
  updatedAt               DateTime       @updatedAt
  application             String

  // Pricing
  subtotal                Float          @default(0.0)
  tax                     Float          @default(0.0)
  total                   Float
  discount                Float          @default(0.0)
  promoCode               String?

  // Payment
  paymentMethod           PaymentMethod  @default(CASH)
  paymentStatus           PaymentStatus  @default(PENDING)
  amountPaid              Float?
  changeGiven             Float?
  receiptNumber           String?        @unique
  receiptSent             Boolean        @default(false)

  // Order Management
  status                  OrderStatus    @default(PENDING)
  priority                OrderPriority  @default(NORMAL)
  estimatedCompletionTime DateTime?
  startedAt               DateTime?      // When barista starts preparing
  readyAt                 DateTime?      // When order is marked ready for pickup
  completedAt             DateTime?      // When order is picked up/completed
  notes                   String?

  products                OrderProduct[]
}

model OrderProduct {
  id          Int       @id @default(autoincrement())
  order       Order     @relation(fields: [orderId], references: [id])
  orderId     Int
  product     Product   @relation(fields: [productId], references: [id])
  productId   Int
  recipe      Recipe?   @relation(fields: [recipeId], references: [id])
  recipeId    Int?
  quantity    Int
  unitPrice   Float     // Price per unit at time of order (including variants/extras)
  packaging   Packaging @relation(fields: [packagingId], references: [id])
  packagingId Int
  
  selectedVariants OrderProductVariant[]
  selectedExtras   OrderProductExtra[]
}

model OrderProductVariant {
  id              Int           @id @default(autoincrement())
  orderProduct    OrderProduct  @relation(fields: [orderProductId], references: [id])
  orderProductId  Int
  variantOption   VariantOption @relation(fields: [variantOptionId], references: [id])
  variantOptionId Int
  priceAtOrder    Float         // Price adjustment at time of order
}

model OrderProductExtra {
  id             Int          @id @default(autoincrement())
  orderProduct   OrderProduct @relation(fields: [orderProductId], references: [id])
  orderProductId Int
  extra          Extra        @relation(fields: [extraId], references: [id])
  extraId        Int
  priceAtOrder   Float        // Price at time of order
}
